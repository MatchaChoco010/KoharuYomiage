<UserControl x:Class="KoharuYomiageApp.Views.ViewB"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:xf="clr-namespace:XamlFlair;assembly=XamlFlair.WPF"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Image Grid.Row="0"
               Source="/Resources/koharu0.png"
               Stretch="Uniform"
               Margin="50,20"
               Opacity="0.8"
               xf:Animations.Primary="{xf:Animate BasedOn={StaticResource FadeInAndGrow}, Duration=1800, ScaleX=0.5, ScaleY=0.5}" />
        <TextBlock Grid.Row="1"
                   FontSize="26"
                   Margin="10"
                   HorizontalAlignment="Center"
                   xf:Animations.Primary="{xf:Animate BasedOn={StaticResource FadeInAndSlideFromTop}, Duration=1400, Delay=600}">
            小春六花ちゃんだよー！
        </TextBlock>
    </Grid>
</UserControl>